<?php
if(isset($_POST['agregarE'])){
	$database = new Connection();
	$db = $database->open();
	try{
		
		$stmt = $db->prepare("INSERT INTO eventos (nombre_evento) VALUES (:nombre_evento)");
		//instrucci贸n if-else en la ejecuci贸n de nuestra declaraci贸n preparada
		$_SESSION['message'] = ( $stmt->execute(array(':nombre_evento' => $_POST['nombre_evento'])) ) ? 'Evento guardado correctamente' : 'Algo sali贸 mal. No se puede agregar Evento';	
	
	}
	catch(PDOException $e){
		$_SESSION['message'] = $e->getMessage();
	}

	//cerrar la conexion
	$database->close();
}

else{
	$_SESSION['message'] = 'Llene el formulario';
}

header('location:Evento');
?>